<!doctype html>
<html>
    <meta charset="utf-8">
    <title> Yatzy Game </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="favicon.ico") ">
    <link rel="stylesheet" type="text/css" href="css/style.css") ">
</head>

<body>

<header>
    <nav>
        <a href={{ app.request.baseUrl }}/>Home</a> |
        <a href={{ app.request.baseUrl }}/session>Session</a> |
        <a href={{ app.request.baseUrl }}/dice>Game 21</a>
        <a href={{ app.request.baseUrl }}/yatzy>Yatzy</a>
        <a href={{ app.request.baseUrl }}/books>Böcker</a>
        <a href={{ app.request.baseUrl }}/highscores>Highscores</a>
    </nav>
</header>
<main>
<h1> {{ header }}</h1>
<h1> {{ app.session.get('message') }}
<form method="POST">
    <label> Starta </label>
    <input type="submit" name="roll" value="Start / Restart" />
</form>

{% if app.session.get('endgame') %}
<form method="POST">
{% if app.session.get('yatzygrapharray') is defined %}
    {% for item in app.session.get('yatzygrapharray') %}
        <img src="{{ item }}" style="height: 50px; width: 50px;">
        <input type="checkbox" name="dices[]" value="{{ item }}">
    {% endfor %}
{% endif %}
<input type="submit" name="nextRoll" value="Rulla tärningar" />
</form>

<h2> Spara och spela nästa runda </h2>

<div class="parent">
<div class="div1 box"> 
{% if app.session.get('ettor') == 0 %}
    <form method="POST">
    <input type="submit" name="ettor" value="Ettor" />
    <input type="submit" name="ettorThrow" value="Stryk" />
</form>
{% endif %}
</div>

<div class="div2 box">
{% if app.session.get('tvåor') == 0 %}
